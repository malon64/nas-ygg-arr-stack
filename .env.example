## Project
COMPOSE_PROJECT_NAME=arr-apps

## Global Settings
DOCKERCONFDIR=/volume1/docker

## User/Group/Timezone
PUID=1028
PGID=100
TZ=Europe/Paris

## Docker logging
DOCKERLOGGING_MAXFILE=10
DOCKERLOGGING_MAXSIZE=200k

## NordVPN (used by Gluetun)
NORDVPN_USER=
NORDVPN_PASSWORD=
SERVER_COUNTRIES=France
OPENVPN_CUSTOM_CONFIG=/config/your-nordvpn-profile.ovpn

## Shared storage (single arr-data tree)
ARR_DATA_DIR=/volume1/arr-data
DOWNLOADS_HOST_DIR=/volume1/arr-data/torrents
MEDIA_MOVIES_HOST_DIR=/volume1/arr-data/media/movies
MEDIA_SHOWS_HOST_DIR=/volume1/arr-data/media/shows

## Service Ports
QBITTORRENT_WEBUI_PORT=8080
JACKETT_PORT=9117
FLARESOLVERR_PORT=8191
PROWLARR_PORT=9696
RADARR_PORT=7878
SONARR_PORT=8989
YGEGE_PORT=8715

## Watchlistarr
SONARR_API_KEY=
RADARR_API_KEY=
WATCHLISTARR_PLEX_TOKEN=
WATCHLISTARR_LOG_LEVEL=INFO

## Ygege (YggTorrent indexer)
YGEGE_LOG_LEVEL=info
